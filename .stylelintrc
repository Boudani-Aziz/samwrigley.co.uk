{
    "extends": "stylelint-config-standard",
    "plugins": [
        "stylelint-scss"
    ],
    "rules": {
        "indentation": 4,
        "at-rule-no-unknown": [true, {
            ignoreAtRules: ['include', 'extend', 'each']
        }]
    },
    "ignoreFiles": [
        "public/**/*",
        "node_modules/**/*"
    ]
}
